    deleteSys: function (id, name) {
      if (confirm(`确定删除系统${name}吗?`)) {
        fetch(serverIP + "/deleteSystem", {
          method: 'POST',
          body: JSON.stringify({
            id: id,
            type: "guanli"
          }),
          redirect: 'follow'
        }).then(response => response.json()).then(result => {
          
          if (result.err == 0) {
            this.data.cardList = result.data
            this.handleEvent()
          }
        }).catch(error => console.log('error', error));
      }
    }
  }
